:root {
  --saito-red: #639;
  --saito-nightscape: linear-gradient(-45deg, #324 50%, #1e1e1f 100%);
  --saito-jester: linear-gradient(-45deg, #426 50%, #213 100%);
  --tile-height: 8em;
  --saito-width: 1500px;
  --sidebar-width: 15em;
  --identicon-height: 1em;
}

.saito-carousel {
  
}

body {
  height: 100vh;
  font-size: 1.0em;
  color: var(--saito-skyline-grey);
  background: var(--saito-nightscape);
  overflow: hidden;
  justify-content: center;
}

a {
  color: #BCF;
}

.arcade-container {
  height: 100%;
  margin: 5em auto;
  padding: 0 1em;
  display: grid;
  gap: 1em;
  grid-template-columns: var(--sidebar-width) auto;
  font-size: 1em;
  width: 100vw;
  max-width: var(--saito-width);
}

.arcade-sidebar {
  display: flex;
  flex-flow: column;
  z-index: 999;
}

.arcade-main {
  display: grid;
  grid-template-rows: 2em 45vh auto;
}

#arcade-tab-buttons {
  width: 100%;
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  justify-items: center;
  overflow: hidden;
  border-left: solid 2px var(--saito-red);
}

#arcade-tab-buttons .tab-button {
  border: solid 2px var(--saito-red);
  font-weight: bold;
  border-left: none;
  border-bottom: none;
  width: 100%;
  display: grid;
  place-items: center;
  transform: skew(20deg) translateX(-0.35em);
}

#arcade-tab-buttons .tab-button span {
  transform: skew(-20deg);
}

#arcade-tab-buttons .tab-button:nth-child(1) {
  border-left: solid 1px var(--saito-red);
}

#arcade-tab-buttons .tab-button.active-tab-button {
  background: var(--saito-jester);
}

#observables-hero {
  font-size: 4em;
  height: 100%;
  display: grid;
  place-items: center;
  border: solid 1px var(--saito-red);
}

#tournaments-hero {
  font-size: 4em;
  height: 100%;
  display: grid;
  place-items: center;
  border: solid 1px var(--saito-red);
}

.arcade-tab-hidden {
  display: none !important;
}

.arcade-hero {
  height: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  overflow-y: auto;
  background: linear-gradient(-45deg, #0002, #0004);
  border: 1px solid var(--saito-red);
}

.arcade-tile {
  width: calc(100% - 1em);
  overflow-y: hidden;
  border: solid 1px #c89af6;
  background-size: cover;
  background-position: center;
  margin: 0.25em;
}

.invite-tile-wrapper {
  width: 100%;
  display: grid;
  grid-template-rows: 1fr;
  grid-template-columns: 12em auto auto 12em;
  background: linear-gradient(45deg, #444a 38%, #0002 100%);
  height: 7em;
  overflow: hidden;
  position: relative;
  text-shadow: 1px 0 2px black, 0 1px 2px black, -1px 0 2px black, 0 -1px 2px black;
}

.game-inset-img {
  background-size: cover;
  background-position: center;
  border: 1px solid darkorange;
  max-height: 6em;
  margin: 0.5em;
}

.arcade-tile .invite-row-2 {
  display: grid;
  grid-template-rows: 1fr auto;
}

.arcade-tile .gameName {
  margin-top: 0.2em;
  margin-left: 0.2em;
  font-size: 2.5em;
  font-weight: bold;
}

.arcade-tile .gameShortDescription {
  display: grid;
  justify-items: end;
  margin: 0.2em 0.2em 0.4em 0em;
  font-size: 2.2em;
}

.invite-description {
  background-color: #0009;
  padding: 4px;
  padding-left: 10px;
  padding-right: 10px;
  font-size: 0.55em;
  font-weight: bold;
  letter-spacing: 0.025em;
  text-transform: uppercase;
}

.arcade-tile .playerInfo {
  margin-bottom: 0.8em;
  display: grid;
  justify-self: start;
  position: relative;
  border-radius: 3px;
}

.arcade-tile .playerName {
  display: grid;
  place-items: center;
  width: 8em;
  text-overflow: ellipsis;
  overflow: hidden;
}

.arcade-tile .identicon {
  border: 1px solid indigo;
  width: 100%;
  max-width: 2em;
  min-width: 2em;
  
}
.arcade-tile .player-slot {
  background-color: #8884;
  font-size: 1.2em;
  box-shadow: 1px 1px #ccc, 1px 1px #333 inset;
  width: 2em;
  height: 2em;
  margin: 0.2em 0.3em;
}
.arcade-tile .player-slot-ellipsis {
  align-self: end;
}
.arcade-tile .button {  
  background: linear-gradient(45deg, #540e81, #b539e8) !important;
  padding: 1em 1em; */
  font-size: 1.2em;
  border-radius: 5px;
  height: 6em;
  max-height: 6em;
  margin: 0.5em;
}


.open-invite .invite-tile-join-button {}
.open-invite .invite-tile-play-button {display: none;}
.my-invite .invite-tile-join-button {display: none;}
.my-invite .invite-tile-play-button {}

@media only screen and (max-width: 1000px) {
  .game-inset-img {
    display: none;
  }
  .invite-tile-wrapper {
    grid-template-columns: 4fr 3fr 12em 8em;
  }
  .arcade-tile .gameName {
    font-size: 2.2em;
  }
    .arcade-tile .gameShortDescription {
    font-size: 2.2em;
  }
  .playerInfo {
    transform: scale(0.8);
  }
}

@media only screen and (max-width: 600px) {
  .arcade-tile {
    min-height: 10em;
  }
  .invite-tile-wrapper {
    grid-template-rows: 1fr 1fr;
    grid-template-columns: 1fr 12em;
    height: unset;
  }
}

.arcade-sub {
  display: grid;
  grid-template-columns: 3fr 2fr;
  gap: 0.5em;
  background-repeat: no-repeat;
  background-position: top;
