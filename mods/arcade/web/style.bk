select::-ms-expand {
  display: none;
}

/* Custom Select */

.saito-select {
  position: relative;
  display: flex;
  width: 20em;
  height: 3em;
  line-height: 3;
  background: #55555555;
  overflow: hidden;
  border-bottom: 1px solid var(--saito-red);
  width: 100%;
}

select {
  flex: 1;
  padding: 0 .5em;
