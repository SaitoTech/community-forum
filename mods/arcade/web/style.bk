  cursor: pointer;
}

/* Arrow */

.saito-select::after {
  content: '\25BC';
  position: absolute;
  top: 0;
  right: 0;
  padding: 0 1em;
  background: #55555533;
  cursor: pointer;
  pointer-events: none;
  -webkit-transition: .25s all ease;
  -o-transition: .25s all ease;
  transition: .25s all ease;
}

/* Transition */

.saito-select:hover::after {
  color: var(--saito-red);
}

option {
  background: var(--saito-cyber-black);
}

.start-game-list {
  display: grid;
  grid-gap: 1em;
  grid-template-columns: 1fr 1fr 1fr;
}

.start-game-btn {
  text-transform: capitalize;
  margin: 3em 0;
}

.start-game {
  background: #000;
  padding: 1em;
  width: 90%;
  margin: auto;
  margin-top: 12%;
  opacity: 0;
}

.start-game-list .return-to-arcade {
  cursor: pointer;
  right: 45px;
  top: 13%;
}

.arcade-game-list-item {
  display: grid;
  grid-gap: 1em;
  grid-template-columns: 2fr 3fr;
  cursor: pointer;
  border: 1px solid var(--saito-red);
  padding: 10px;
}

.arcade-game-list-item:hover {
  border: 1px solid var(--saito-red);
}

.arcade-game-list-image {
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
}

#game-list-wrapper {
  /* top: 5em; */
  top: 0;
  left: 0;
  z-index: 5;
  width: 100%;
  position: fixed;
  height: calc(100vh);
  overflow: auto;
  margin: auto;
  transition: all ease 0.5s;
  background: #00000099;
}

.arcade-main-hero {
  width: 100%;
}

.header {
  background: none;
}

.header-icon-disabled {
  color: #B8E;
  text-shadow: #444 2px 1px, #666 3px 2px;
}

/** ARCADE INIT **/

.arcade-initialize-game-container {
  display: grid;
  grid-gap: 1em;
  padding: 2em;
  font-size: 1.3em;
}

/** ARCADE INVITATION **/

.arcade-invite-container {
  grid-gap: 1em;
  grid-template-rows: 4em 4em auto;
  padding: 0 20%;
  text-align: center;
}

.arcade-invite-initializer {
  display: grid;
  grid-template-rows: 4em 4em;
}

#invite-game-spinner {
  margin: unset;
  display: none;
  justify-self: center;
  width: 6em;
  height: 6em;
}

/** CHAT STYLING **/

.chat-row {
  /* no border */
  border-bottom: 0px solid var(--saito-red);
}

.chat-row:hover {
  background-color: #33669999;
}

.chat-box {
  background-color: var(--saito-cyber-black);
  border: 1px solid var(--saito-red);
}

.chat-box-main {
  background: var(--saito-nightscape);
  color: #ffffff;
}

.chat-box-header {
  border-bottom: 1px solid var(--saito-red);
  background: var(--saito-jester);
}

.chat-message-others {
  color: black;
}

.chat-box-input {
  border-top: 1px solid var(--saito-red);
}

.chat-box-new-message-input {
  background: var(--saito-cyber-black);
  color: white;
}

.chat-room-submit-button {
  color: #fff;
}

.chat-message-header {
  color: #ffffff;
}

#alert-box {
  background: var(--saito-nightscape);
}

/* .arcade-game-row-delete {
  margin: 0 0 0 12px;
} */

.loader {
  margin: 25%;
}

/* achiecvments */

.badges {
  display: grid;
  grid-gap: 5px;
  grid-template-columns: auto auto auto;
}

.share-link {
  color: #ddd;
}

.arcade-sidebar-notices {
  margin: 5px 0 0 0;
}

.arcade-sidebar-done, .achievments-cta {
  align-self: center;
}

.arcade-sidebar-row {
  display: grid;
  grid-gap: 1em;
  grid-template-columns: 4em auto;
  margin: 1em;
}

.arcade-sidebar-row i {
  font-size: 2em;
}

.arcade-sidebar-row span {
  font-size: 1.2em;
}

.badge {
  border: 2px solid white;
  border-radius: 1em;
  display: inline-block;
  padding: 5px 10px 2px;
}

.arcade-sidebar-row i span {
  font-size: 0.7em;
  line-height: 1.2em;
  display: inline-block;
}

span.rewards-row-name {
  align-self: center;
}

.arcade-sidebar-row span {
  font-size: 1.2em;
}

.rewards-row-name {
  text-align: left;
  padding: 0 5px;
}

.game-details {
  margin: 2em 0;
  text-align: left;
}

.game-details label {
  font-weight: bold;
}

#game-invite-controls div {
  margin: 1em 0;
  display: grid;
  grid-gap: 1em;
  grid-template-columns: 20em 1fr;
}

#game-invite-controls button {
  width: 100%;
}

#game-publisher-message {
  margin: 2em 1em 0;
}
